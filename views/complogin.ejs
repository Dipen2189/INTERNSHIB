    <div class="row">
        <div class="col-lg-12">
            <div class="card nestable-cart">
                <div class="card-title text-center" >
                    <h1>Login as Company</h1>
                </div>    
                <% if ( SuccessMsg.length > 0 ) { %>
                    <div class="alert alert-success offset-md-2 col-md-7 text-center" role="alert">
                        <p>Message: <%= SuccessMsg %> </p>
                    </div>
                <% } %>
                <% if ( ErrorMsg.length > 0 ) { %>
                    <div class="alert alert-danger offset-md-2 col-md-7 text-center" role="alert">
                        <p>Message: <%= ErrorMsg %> </p>
                    </div>
                <% } %>
                    
                <div class="container col-sm-12" style="margin: auto 25%;" id="mainform">
                    <div id="loginbox" style=" margin-top:40px" class="mainbox col-md-6  col-md-offset-3 col-sm-8 col-sm-offset-2">
        
                        <form class="form-horizontal" role="form" method="post" action="/complogin" onSubmit="return checkblank(this);">

                            <div id="signupalert" style="display:none" class="alert alert-danger">
                                <p>Error:</p>
                                <span></span>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label for="username" class="padding-top-7" class="control-label">Username</label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="username" placeholder="Username" required>
                                </div><br><br>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <label for="password" class=" padding-top-7 control-label">Password</label>
                                </div>
                                <div class="col-md-6 toggle">
                                    <input type="password" class="form-control" name="password" id="password1" placeholder="Password" required>
                                    <i class="far fa-eye" id="togglepassword"></i>
                                </div><br><br>
                            </div>

                            <div class="form-group">
                                <!-- Forgot password -->
                                <div class="offset-md-1 col-md-11 margin-bottom-15 margin-top-10">
                                    <a href="/compforgotpass"><label for="forgot password" class="control-label">Forgot Password? Click here</label></a>
                                </div>
                            </div>

                            <div class="form-group">
                                <!-- Button -->
                                <div class="offset-md-3 col-md-9 margin-bottom-15 margin-top-10">
                                    <button id="btn-signup" type="submit" class="btn btn-info button  text-center"><i class="icon-hand-right"></i>Login</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>