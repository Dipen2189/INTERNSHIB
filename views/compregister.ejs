<div class="row">
    <div class="col-lg-12">
        <div class="card nestable-cart" >
            <div class="card-title text-center">
                <h1>Register as Company</h1>
            </div>  
            <% if ( ErrorMsg.length > 0 ) { %>
                <div class="alert alert-danger offset-md-2 col-md-7 text-center" role="alert">
                    <p>Message: <%=ErrorMsg %> </p>
                </div>
                <% } %>


            <div class="container col-sm-12" style="margin: auto 25%;" id="mainform">
                <div id="signupbox" style=" margin-top:40px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <form class="form-horizontal" role="form" method="post" action="/compregister" onSubmit="return checkblank(this);">

                            <div id="signupalert" style="display:none" class="alert alert-danger">
                                <p>Please fill this!</p>
                                <span></span>
                            </div>

                            <div class="form-group row" >
                                <div class="col-md-4" >
                                    <label for="cmpname" class="padding-top-7" class="control-label">Company Name</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="cmp_name" placeholder="Company name" required>
                                </div><br><br>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="emailid" class="padding-top-7" class="control-label">Email ID</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="email" class="form-control" name="emailid" placeholder="eg:abc@xyz.com" required>
                                </div><br><br>
                            </div>

                            <div class="form-group row">
                                
                                <div class="col-md-4">
                                    <label for="user_name" class="padding-top-7" class="control-label">Username</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="username" placeholder="Username" required>
                                </div><br><br>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="password" class="padding-top-7" class="control-label">Password</label>
                                </div>
                                <div class="col-md-8 toggle">
                                    <input type="password" class="form-control" name="password" id="password4" placeholder="Password" required>
                                    <i class="far fa-eye" id="comppassword"></i>
                                </div><br><br>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="url" class="padding-top-7" class="control-label">Website URL</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="url" placeholder="Your company website" required>
                                </div><br><br>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="city" class="padding-top-7" class="control-label">City</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="city" placeholder="City name" required>
                                </div><br><br>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="state" class="padding-top-7" class="control-label">State</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="state" placeholder="State name" required>
                                </div><br><br>
                            </div>  

                            <div class="form-group row">
                                <div class="col-md-4">
                                    <label for="aboutus" class="padding-top-7" class="control-label">About us</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="aboutus" placeholder="About company" required>
                                </div><br><br>
                            </div>  

                            <div class="form-group">
                                <!-- Button -->
                                <div class="offset-md-3 col-md-9 margin-bottom-15">
                                    <button type="submit" class="btn btn-info button text-center"><i class="icon-hand-right"></i>Register</button>
                                </div>
                            </div>
                    </form>
                </div>
            </div> 
        </div>
    </div>
</div>