<% if ( SuccessMsg.length > 0 ) { %>
    <div class="alert alert-success offset-md-2 col-md-7 text-center" role="alert">
        <p>Message: <%= SuccessMsg %> </p>
    </div>
<% } %>

<% if ( ErrorMsg.length > 0 ) { %>
    <div class="alert alert-danger offset-md-2 col-md-7 text-center" role="alert">
        <p>Message: <%= ErrorMsg %> </p>
    </div>
<% } %>
<br><br><br>
<div class="row">
    <div class="col-md-12">
        <h1 class="pt-3 text-center text-muted">Applications Received</h1>
    </div>
</div><br>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="bootstrap-data-table-panel">
                <div class="table-responsive">
                    <table id="row-select" class="display table table-borderd table-hover">
                        <thead>
                            <tr>
                                <th>Sr. No</th>
                                <th>Title</th>
                                <th>Name</th>
                                <th>Posted On</th>
                                <th>Applied On</th>
                                <th>Status</th>
                                <th>View Applications</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% result.forEach(function(el, index) { %>
                                <tr> 
                                    <!--sr no-->
                                    <th><%= index + 1 %></th> 
                                    <th><%= el.title %></th>
                                    <th><%= el.stud_name %></th>
                                    <th><%= moment(el.curr_date).format('Do MMMM, YYYY') %></th>
                                    <th><%= moment(el.curr_time).format('Do MMMM, YYYY') %></th>
                                    <th><% if (el.status == 0) {%><h5 style="color: blue;"><strong>Pending</strong></h5>
                                    <% } else if(el.status == 1) {%><h5 style="color: green;"><strong>Accepted</strong></h5>
                                    <% } else if(el.status == 2) {%><h5 style="color: red;"><strong>Rejected</strong></h5>
                                    <% } else {%><h5>error</h5>
                                    <% } %></th>
                                    <th><a href='/company/viewstudent/<%= el.apply_id %>'>View Applications</a></th>                                 
                                    <!--status-->
                                </tr>
                                <% }) %>


                        </tbody>

                        <tfoot>
                            <tr>
                                <th>Sr. No</th>
                                <th>Title</th>
                                <th>Name</th>
                                <th>Posted On</th>
                                <th>Applied On</th>
                                <th>Status</th>
                                <th>View Applications</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <!-- /# card -->
    </div>
    <!-- /# column -->
</div>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src=" https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<script src=" https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function() {
        $('#row-select').DataTable({
            pageLength: 10,
            filter: true,
            deferRender: true,

            scrollCollapse: true,

        });
    });
</script>