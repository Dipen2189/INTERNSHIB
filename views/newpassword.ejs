<div class="row">
    <div class="col-lg-12">
        <div class="card nestable-cart">
            <% if ( SuccessMsg.length > 0 ) { %>
                <div class="alert alert-success offset-md-2 col-md-7 text-center" role="alert">
                    <p>Message: <%= SuccessMsg %> </p>
                </div>
            <% } %>
            <% if ( ErrorMsg.length > 0 ) { %>
                <div class="alert alert-danger offset-md-2 col-md-7 text-center" role="alert">
                    <p>Message: <%= ErrorMsg %> </p>
                </div>
            <% } %>
                
            <div class="card-title text-center" >
                <h1>Change Password</h1>
            </div>    
                
            <div class="container col-sm-12" style="margin: auto 25%;" id="mainform">
                <div id="loginbox" style=" margin-top:40px" class="mainbox col-md-6  col-md-offset-3 col-sm-8 col-sm-offset-2">
    
                    <form class="form-horizontal" role="form" method="post" action="/newpassword" onSubmit="return checkblank(this);">

                        <div id="signupalert" style="display:none" class="alert alert-danger">
                            <p>Error:</p>
                            <span></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label for="emailid" class="padding-top-7" class="control-label">Email ID</label>
                            </div>
                            <div class="col-md-8">
                                <input type="email" class="form-control" name="emailid" placeholder="Enter your Email ID" >
                            </div><br><br>
                            <div class="col-md-4">
                                <label for="newpassword" class="padding-top-7" class="control-label">New Password</label>
                            </div>
                            <div class="col-md-8" class="toggle">
                                <input type="password" class="form-control" name="newpassword" id="password" placeholder="New Password" >
                                <i class="far fa-eye" id="newpassword"></i>
                            </div><br><br>
                            <div class="col-md-4">
                                <label for="confirmpassword" class="padding-top-7" class="control-label">Confirm Password</label>
                            </div>
                            <div class="col-md-8" class="toggle">
                                <input type="password" class="form-control" name="confirmpassword" id="password3" placeholder="Confirm Password" >
                                <i class="far fa-eye" id="confirmpassword"></i>
                                
                            </div><br><br>
                            <!--Verify Button -->
                            <div class="offset-md-3  col-md-9 margin-bottom-15 margin-top-10 text-justify">
                                <button id="btn-signup" type="submit" class="btn btn-info button"><i class="icon-hand-right"></i>Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>